<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- CircularImageView Custom Styling -->
	<declare-styleable name="CircleView">

		<!-- If you want internal circle to be not a full size -->
		<attr name="cv_fillRadius" format="dimension"/>
		<!-- background circle color -->
		<attr name="cv_color" format="color"/>
		<!-- second color -->
		<attr name="cv_secondColor" format="color"/>
		<!-- Whether or not to draw a circular border around the image. -->
		<attr name="cv_border" format="boolean"/>
		<!-- The color of the border draw around the image. (if enabled) -->
		<attr name="cv_borderColor" format="color"/>
		<!-- Makes the border this pixels wide. (if enabled) -->
		<attr name="cv_borderWidth" format="dimension"/>
		<!-- Whether or not to draw a selector on this view upon touch events. -->
		<attr name="cv_selectable" format="boolean"/>
		<!-- The color of the selector draw on top of the image upon touch events. (if enabled) -->
		<attr name="cv_selectColor" format="color"/>
		<!-- The color of the selector stroke drawn around the image upon touch events. Be sure to provide some opacity. (if enabled) -->
		<attr name="cv_selectBorderColor" format="color"/>
		<!-- The selector stroke drawn around the image upon touch events this pixels wide. (if enabled) -->
		<attr name="cv_selectBorderWidth" format="dimension"/>
	</declare-styleable>

	<declare-styleable name="CircleViewStyle">
		<attr name="circleViewDefault" format="reference"/>
	</declare-styleable>

</resources>